generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  contacts Contact[]
}

model Contact {
  id         String    @id @default(uuid())
  firstName  String
  lastName   String
  middleName String?
  emails     Email[]
  numbers    Number[]
  websites   Website[]
  User       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model Number {
  id        String  @id @default(uuid())
  number    String
  owner     Contact @relation(fields: [contactId], references: [id])
  contactId String
  isPrimary Boolean @default(false)
}

model Email {
  id        String  @id @default(uuid())
  email     String
  owner     Contact @relation(fields: [contactId], references: [id])
  contactId String
  isPrimary Boolean @default(false)
}

model Website {
  id        String  @id @default(uuid())
  website   String
  owner     Contact @relation(fields: [contactId], references: [id])
  contactId String
  isPrimary Boolean @default(false)
}
